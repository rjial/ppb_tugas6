<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">
            <Button
                android:id="@+id/btnComputer"
                style="?android:attr/borderlessButtonStyle"
                android:background="@color/teal_700"
                android:textColor="@color/white"
                android:text="Computer"
                android:textSize="9sp"
                android:clickable="true"
                android:drawableLeft="@drawable/laptop_24"
                android:layout_height="60dp"
                android:layout_width="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">
            <Button
                android:id="@+id/btnPhone"
                style="?android:attr/borderlessButtonStyle"
                android:background="@color/teal_700"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Phone"
                android:textSize="9sp"
                android:drawableLeft="@drawable/phone_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1">
            <Button
                android:id="@+id/btnHomeServices"
                style="?android:attr/borderlessButtonStyle"
                android:background="@color/teal_700"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Home Services"
                android:textSize="9sp"
                android:drawableLeft="@drawable/home_services_24"
                />
        </LinearLayout>

    </GridLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:columnCount="3"
                android:useDefaultMargins="true"
                android:layout_marginBottom="150dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/registration_"
                        android:background="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/registration"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/payment"
                        android:background="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/paybill"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/services"
                        android:background="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/services"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/delivery"
                        android:background="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/contact_us"
                        android:background="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/settings"
                        android:background="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </GridLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/banner_1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/banner_2"/>
        </LinearLayout>

    </ScrollView>




</LinearLayout>